<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="4dip"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/mostrarFragmento"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5">
    </FrameLayout>

    <Button
        android:id="@+id/nuevoFragmento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nuevo Fragmento"/>

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="1">

        <Button
            android:id="@+id/mostrarDialogoFragmento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diálogo Fragmento"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/mostrarDialogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diálogo Normal"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>